{
  "name": "easyk-frontend",
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/"
    }
  ],
  "env": {
    "NEXT_PUBLIC_API_URL": {
      "description": "백엔드 API URL",
      "value": "https://easyk-backend.vercel.app"
    },
    "NEXT_PUBLIC_APP_NAME": {
      "description": "애플리케이션 이름",
      "value": "easyK"
    }
  },
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "installCommand": "npm install"
}

